          a.brand(href='#') Admin Page
          .nav-collapse.collapse
            ul.nav
              li.active
                a(href='#') Home
          // /.nav-collapse
    .container-fluid
      .row-fluid
        .span3.bs-docs-sidebar
          ul.nav.nav-list.bs-docs-sidenav.affix
            li
              a(href='#global')
                i.icon-chevron-right
                | Global styles
            li
